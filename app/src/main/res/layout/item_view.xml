<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:padding="10dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvFName"/>

        <TextView
            android:id="@+id/tvFName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="bijal"
            android:padding="10dp"
            app:layout_constraintLeft_toRightOf="@id/tvIndex"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvLName"/>

        <TextView
            android:id="@+id/tvLName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="sutariya"
            android:padding="10dp"
            app:layout_constraintLeft_toRightOf="@id/tvFName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnDelete"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            app:layout_constraintTop_toTopOf="@id/tvLName"
            app:layout_constraintBottom_toBottomOf="@id/tvLName"
            app:layout_constraintRight_toLeftOf="@id/btnEdit"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            app:layout_constraintTop_toTopOf="@id/tvLName"
            app:layout_constraintBottom_toBottomOf="@id/tvLName"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>